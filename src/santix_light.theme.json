{
  "name": "Santix Light",
  "dark": false,
  "author": "Santix",
  "editorScheme": "/santix_light.xml",
  "colors": {
    "foreground": "#2d2d32",
    "background": "#f0f0f0",
    "accent": "#f65454",
    "accentLighter": "#ffa9a9",
    "secondary": "#d4d2d2",
    "accentEvenLighter": "#efeaea",

    "button": "#e6e6e6",
    "pressed": "#d7d7d7",

    "border": "#D1D1D1",
    "componentBorder": "#C4C4C4",

    "whiter": "#fdfdfd",
    "greener": "#3AA87B",

    "panel": "#F2F2F2"
  },
  "ui": {
    "*": {
      "background": "background",
      "foreground": "foreground",

      "selectionBackground": "accent",
      "selectionForeground": "background",
      "selectionInactiveBackground": "secondary",
      "selectionBackgroundInactive": "secondary",

      "lightSelectionBackground": "accentEvenLighter",
      "lightSelectionForeground": "whiter",
      "lightSelectionInactiveBackground": "accentEvenLighter",
      "lightSelectionInactiveForeground": "background",

      "disabledBackground": "background",
      "inactiveBackground": "background",

      "borderColor": "border",
      "disabledBorderColor": "border",

      "separatorForeground": "border",
      "separatorColor": "border",
      "lineSeparatorColor": "border",

      "modifiedItemForeground": "accent",

      "underlineColor": "accent",

      "focusColor": "secondary",

      "focusedBorderColor": "secondary"
    },

    "ActionButton": {
      "hoverBackground": "button",
      "hoverBorderColor": "button",
      "pressedBackground": "pressed",
      "pressedBorderColor": "pressed"
    },

    "Button": {
      "shadowColor": "#A6A6A600",
      "startBorderColor": "componentBorder",
      "endBorderColor": "componentBorder",
      "focusedBorderColor": "secondary",
      "default": {
        "foreground": "background",
        "startBackground": "accent",
        "endBackground": "#d63f3f",
        "startBorderColor": "#d44040",
        "endBorderColor": "#c83e3e",
        "shadowColor": "#A6A6A600",
        "focusedBorderColor": "secondary"
      }
    },

    "Link": {
      "activeForeground": "accent",
      "hoverForeground": "accent",
      "pressedForeground": "#cb2121",
      "visitedForeground": "#b34472"
    },

    "Borders": {
      "color": "border",
      "ContrastBorderColor": "border"
    },

    "ComboBox": {
      "ArrowButton": {
        "iconColor": "pressed",
        "background": "background",
        "disabledIconColor": "button",
        "nonEditableBackground": "background"
      },
      "background": "whiter",
      "nonEditableBackground": "whiter",
      "modifiedItemForeground": "accent"
    },

    "ComboBoxButton.background": "whiter",

    "DragAndDrop": {
      "areaBackground": "#f6545422"
    },

    "Plugins": {
      "tagBackground": "secondary",
      "Tab.selectedBackground": "secondary",
      "Tab.hoverBackground": "button",
      "Button": {
        "installForeground": "greener",
        "installBorderColor": "greener",
        "installFillBackground": "greener"
      },
      "hoverBackground": "accentEvenLighter"
    },

    "TextField.background": "whiter",
    "Plugins.SearchField.background": "whiter",

    "Editor.shortcutForeground": "accent",

    "DebuggerPopup.borderColor": "border",

    "DefaultTabs": {
      "inactiveUnderlineColor": "secondary",
      "underlineColor": "accent",
      "background": "panel"
    },

    "EditorTabs.underlinedTabBackground": "whiter",

    "Notification": {
      "errorForeground": "#DFDFE0",
      "errorBackground": "#99325b",
      "errorBorderColor": "#99325b",

      "MoreButton.innerBorderColor": "border"
    },

    "ProgressBar": {
      "trackColor": "border",
      "progressColor": "accent",
      "indeterminateStartColor": "secondary",
      "passedColor": "greener",
      "passedEndColor": "#368E68"
    },

    "StatusBar.borderColor": "border",
    "ToolWindow.Header.inactiveBackground": "background",

    "SearchMatch": {
      "endBackground": "secondary",
      "startBackground": "secondary"
    },

    "ToggleButton": {
      "onBackground": "greener"
    },

    "CompletionPopup": {
      "matchForeground": "accent",
      "selectionBackground": "secondary",
      "selectionInactiveBackground": "#e0e0e0"
    }
  },

  "icons": {
    "ColorPalette": {
      "Actions.Grey": "#696d78",
      "Actions.Red": "#e0516b",
      "Actions.Blue": "#348def",
      "Actions.Green": "#3AA87B",
      "Actions.Yellow": "#e3b610",

      "Objects.Grey": "#858994",
      "Objects.RedStatus": "#fd7171",
      "Objects.Red": "#dd0b0b",
      "Objects.Pink": "#f070a5",
      "Objects.Yellow": "#e6ba29",
      "Objects.Green": "#3AA87B",
      "Objects.Blue": "#499df2",
      "Objects.Purple": "#bc8af2",
      "Objects.YellowDark": "#c39c0c",
      "Objects.BlackText": "#3d4041",

      "Checkbox.Background.Default": "#d4d2d2",
      "Checkbox.Background.Selected": "#f65454",
      "Checkbox.Background.Disabled": "#d4d2d2",

      "Checkbox.Foreground.Selected": "#f0f0f0",
      "Checkbox.Foreground.Disabled": "#d4d2d2",

      "Checkbox.Border.Default": "#d4d2d2",
      "Checkbox.Border.Selected": "#f65454",
      "Checkbox.Border.Disabled": "#d4d2d2",

      "Checkbox.Focus.Thin.Default": "#fdebeb",
      "Checkbox.Focus.Thin.Selected": "#fccece",
      "Checkbox.Focus.Wide": "#ffa9a9"
    }
  }
}