{
  "name": "santix-light",
  "dark": false,
  "author": "Santix",
  "editorScheme": "/santix_light.xml",
  "colors": {
    "foreground": "#2d2d32",
    "background": "#f5f5f5",
    "accent": "#ee4747",
    "other": "#FC4741",
    "accentLighter": "#fcd3d3",
    "button": "#e6e6e6",
    "pressed": "#d7d7d7",

    "border": "#D1D1D1",
    "componentBorder": "#C4C4C4",
    "lightBorder": "#d9d9d9",
    "windowsPopupBorder": "#adadad",

    "panel": "#F2F2F2"
  },
  "ui": {
    "*": {
      "background": "background",
      "foreground": "foreground",

      "selectionBackground": "accent",
      "selectionForeground": "background",
      "selectionInactiveBackground": "accentLighter",
      "selectionBackgroundInactive": "accentLighter",

      "lightSelectionBackground": "accent",
      "lightSelectionForeground": "#F9FCFF",
      "lightSelectionInactiveBackground": "accentLighter",
      "lightSelectionInactiveForeground": "background",

      "disabledBackground": "background",
      "inactiveBackground": "background",

      "borderColor": "border",
      "disabledBorderColor": "border",

      "separatorForeground": "border",
      "separatorColor": "border",
      "lineSeparatorColor": "border",

      "modifiedItemForeground": "accent",

      "focusColor": "accentLighter"
    },

    "ActionButton": {
      "hoverBackground": "button",
      "hoverBorderColor": "button",
      "pressedBackground": "pressed",
      "pressedBorderColor": "pressed"
    },

    "Button": {
      "shadowColor": "#A6A6A600",
      "startBorderColor": "componentBorder",
      "endBorderColor": "componentBorder",
      "focusedBorderColor": "accentLighter",
      "default": {
        "foreground": "background",
        "startBackground": "accent",
        "endBackground": "#d63f3f",
        "startBorderColor": "#d44040",
        "endBorderColor": "#c83e3e",
        "shadowColor": "#A6A6A600",
        "focusedBorderColor": "accentLighter"
      }
    },

    "Link": {
      "activeForeground": "accent",
      "hoverForeground": "accent",
      "pressedForeground": "#cb2121",
      "visitedForeground": "#b34472"
    },

    "Borders": {
      "color": "border",
      "ContrastBorderColor": "border"
    },

    "ComboBox": {
      "ArrowButton": {
        "iconColor": "#DBDBDB",
        "background": "accent"
      },
      "background": "#FFFFFF",
      "nonEditableBackground": "#FFFFFF",
      "ArrowButton.background": "#fafafa"
    },

    "ComboBoxButton.background": "#FFFFFF",

    "ComboPopup.border": "1,1,1,1,17181a",

    "DefaultTabs.background": "panel",

    "EditorTabs.underlinedTabBackground": "#ffffff",
    "Editor.shortcutForeground": "accent",

    "DebuggerPopup.borderColor": "border",

    "DefaultTabs": {
      "inactiveUnderlineColor": "accentLighter",
      "underlineColor": "accent"
    },

    "Notification": {
      "errorForeground": "#DFDFE0",
      "errorBackground": "#843937",
      "errorBorderColor": "#982B31",

      "MoreButton.innerBorderColor": "border"
    },

    "ProgressBar": {
      "trackColor": "#D1D1D1",
      "progressColor": "accent",
      "indeterminateStartColor": "accentLighter",
      "passedColor": "#3AA87B",
      "passedEndColor": "#368E68"
    },

    "StatusBar.borderColor": "border",
    "ToolWindow.Header.inactiveBackground": "panel",

    "SearchMatch": {
      "endBackground": "accentLighter",
      "startBackground": "accentLighter"
    },

    "ToggleButton": {
      "onBackground": "#3AA87B"
    },

    "CompletionPopup": {
      "matchForeground": "accent",
      "selectionBackground": "accentLighter",
      "selectionInactiveBackground": "#e0e0e0"
    }
  }
}